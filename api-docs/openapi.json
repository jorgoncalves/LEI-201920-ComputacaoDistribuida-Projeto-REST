          "_id": { "type": "string" },
          "nome": { "type": "boolean" },
          "matriculas": { "type": "array", "items": { "type": "string" } },
          "saldoEmCartao": { "type": "number" }
        }
      },
      "lugaresParque": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "label": { "type": "string" },
          "ocupado": { "type": "boolean" }
        }
      },
      "pagamentos": {
        "type": "object",
        "properties": {
          "forma": { "type": "string" },
          "valor": { "type": "number" },
          "cliente": {
            "type": "ObjectId",
            "$ref": "#/components/schemas/clientesHabituais"
          }
        }
      },
      "parques": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "precoPorHora": { "type": "number" },
