    "/clientes": {
      "get": {
        "tags": ["Clientes"],
        "description": "Coleção com todos os clientes",

        "responses": {
          "200": {
            "description": "Coleção com todos os clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/clientesHabituais"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Clientes"],
        "description": "Criar um novo cliente",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/clientesHabituais"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Novo evento criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/clientesHabituais"
                }
              }
            }
          }
        }
      }
    },
    "/clientes/{idCliente}": {
      "put": {
        "tags": ["Clientes"],
        "description": "Atualizar apenas um cliente",
        "parameters": [
          {
            "name": "idCliente",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "[a-zA-Z0-9]+"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/objEventoResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },
          "404": {
            "description": "Cliente não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "id do Cliente não encontrado"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
